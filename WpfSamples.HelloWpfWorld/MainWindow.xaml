<Window x:Class="WpfSamples.HelloWpfWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSamples.HelloWpfWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="ClickMe" Margin="5" Content="ClickMe" Click="ClickMe_Click"/>
        <TextBlock Grid.Row="1" Name="UserInformation" Margin="10" FontSize="40" Text="Please Click Button !!"/>
    </Grid>
</Window>
